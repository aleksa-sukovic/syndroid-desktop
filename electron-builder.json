{
    "productName": "SynDroid",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/renderer/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json",
        "**/src/renderer/assets/*.png"
    ],
    "extraResources": [
        "**/src/renderer/assets/*.png"
    ],
    "win": {
        "icon": "src/renderer/assets/icon.png",
        "target": [
            "portable"
        ]
    },
    "mac": {
        "icon": "src/renderer/assets/icon.png",
        "target": [
            "dmg"
        ]
    },
    "linux": {
        "icon": "src/renderer/assets/icon.png",
        "target": [
            "AppImage"
        ]
    }
}
